{
  "$schema": "../../../node_modules/@biomejs/biome/configuration_schema.json",
  "root": false,
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "on",
        "useSortedProperties": "on",
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["server-only", "use client", "use server"],
              ":BLANK_LINE:",
              ":URL:",
              ":BLANK_LINE:",
              [":NODE:", ":BUN:", ":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
              ":BLANK_LINE:",
              [":ALIAS:"],
              ":BLANK_LINE:",
              [":PATH:"]
            ]
          }
        }
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.tsx",
      "**/*.cjs",
      "**/*.mjs",
      "**/*.json",
      "**/*.css",
      "!**/node_modules/**",
      "!**/temp/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.next/**",
      "!**/.turbo/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "warn",
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList", "className"],
            "functions": ["clsx", "cva", "tw", "tw.*"]
          }
        }
      },
      "style": {
        "noNonNullAssertion": "off",
        "useTemplate": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noDoubleEquals": "off",
        "noExplicitAny": "off"
      }
    }
  }
}
